# Variables de entorno para el Sistema de Gestión de Grifo

# API Configuration
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_API_TIMEOUT=30000

# App Configuration
REACT_APP_APP_NAME=Sistema de Gestión de Grifo
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Features
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_LOGGING=true

# UI Configuration
REACT_APP_ITEMS_PER_PAGE=10
REACT_APP_AUTO_REFRESH_INTERVAL=30000

# Security
REACT_APP_JWT_SECRET=your-jwt-secret-key
REACT_APP_SESSION_TIMEOUT=3600000

# Database (para referencia del backend)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=grifosis_db
DB_USER=root
DB_PASSWORD=password

# Email Configuration (para notificaciones)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30

